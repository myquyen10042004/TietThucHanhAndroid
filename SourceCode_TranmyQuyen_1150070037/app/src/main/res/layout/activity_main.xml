            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lab 10 - 11"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#61A6F7"
                android:layout_marginBottom="16dp" />
            <LinearLayout
